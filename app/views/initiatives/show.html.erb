<p id="notice"><%= notice %></p>
<div class="row-fluid">
  <div class="span6">
    <h2><%= @initiative.name %></h2>
    <h4><%= @initiative.description %></h4>

<h5><%= @initiative.issues.name %></h5>
    <dl class="dl-horizontal">
      <dt>Year:</dt>
      <dd><%= @initiative.year %></dd>
    </dl>

        <dl class="dl-horizontal">
      <dt>Status:</dt>
      <dd><%= @initiative.status %></dd>
    </dl>
    
    <dl class="dl-horizontal">
      <dt>initiative_type:</dt>
      <dd><%= @initiative.initiative_type %></dd>
    </dl>

    <dl class="dl-horizontal">
      <dt>Total Contributions:</dt>
      <dd><%= number_to_currency @initiative.total_contributions %></dd>
    </dl>

    <dl class="dl-horizontal">
      <dt>Total Expenditures:</dt>
      <dd><%= number_to_currency @initiative.total_expenditures %></dd>
    </dl>

	<dl class="dl-horizontal">
      <dt>More Info:</dt>
      <dd><%= @initiative.more_info %></dd>
    </dl>
    
    <dl class="dl-horizontal">
      <dt>Support Rate:</dt>
      <dd><%= @initiative.support_rate %></dd>
    </dl>
    
    <dl class="dl-horizontal">
      <dt>Ballot Code:</dt>
      <dd><%= @initiative.ballot_code %></dd>
    </dl>

    <%= link_to 'Edit', edit_initiative_path(@initiative) %> |
    <%= link_to 'Back', initiatives_path %>
</div>
</div>
